---
import {Image} from "astro:assets"
import dandev_logo from "/src/assets/dandev_logo.ico"
import avatar from "/src/assets/daniel_avatar 1.svg"
---

<header class="flex justify-between items-center m-2">
    <Image
        src={dandev_logo}
        alt="Logo dandev"
        width={120}
        height={120}
     />
     
     <Image 
        class="hover:scale-110 transition-transform duration-300"
        src={avatar}
        alt="Avatar de Daniel Hernandez"
        width={110}
        height={110}
    />

</header>